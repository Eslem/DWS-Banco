<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Banco</display-name>
    <description>Banco grupo 4</description>
    
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    
    
    <listener>
        <listener-class>com.fpmislata.banco.presentacion.listener.hibernate.ServletContextListenerImplHibernate</listener-class>
    </listener>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <!--flyway-->
    <listener>
        <listener-class>com.fpmislata.banco.presentacion.listener.migration.ServletContextListenerImplMigration</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    
    <filter>
        <filter-name>FilterImplHibernate</filter-name>
        <filter-class>com.fpmislata.banco.presentacion.filter.hibernate.FilterImplHibernate</filter-class>
    </filter>   
    <filter-mapping>
        <filter-name>FilterImplHibernate</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    
    <filter>
        <filter-name>FilterImplSecurity</filter-name>
        <filter-class>com.fpmislata.banco.presentacion.filter.security.FilterImplSecurity</filter-class>
    </filter>    
    <filter-mapping>
        <filter-name>FilterImplSecurity</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    

    
    
    
    </web-app>
